<AnchorPane fx:controller="net.blog.dev.gestion.stocks.jfx.controllers.StrategiesController" stylesheets="net/blog/dev/gestion/stocks/css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label text="Stratégie">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox prefWidth="150.0" fx:id="strategies" />
                  <Button mnemonicParsing="false" text="Analyser" onAction="#run"/>
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Label text="Nombre d'ordres d'achat" />
                  <Label fx:id="nbrBuy"/>
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Label text="Nombre d'ordres de vente">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="nbrSell" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Label text="Durée moyenne">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="duration" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
             <HBox>
                 <children>
                     <Label text="Gain moyen achat">
                         <HBox.margin>
                             <Insets right="5.0" />
                         </HBox.margin>
                     </Label>
                     <Label fx:id="benefitsAverageBuy" />
                 </children>
                 <padding>
                     <Insets left="10.0" top="10.0" />
                 </padding>
             </HBox>
             <HBox>
                 <children>
                     <Label text="Gain total achat">
                         <HBox.margin>
                             <Insets right="5.0" />
                         </HBox.margin>
                     </Label>
                     <Label fx:id="benefitsBuy" />
                 </children>
                 <padding>
                     <Insets left="10.0" top="10.0" />
                 </padding>
             </HBox>
             <HBox>
                 <children>
                     <Label text="Gain moyen vente">
                         <HBox.margin>
                             <Insets right="5.0" />
                         </HBox.margin>
                     </Label>
                     <Label fx:id="benefitsAverageSell" />
                 </children>
                 <padding>
                     <Insets left="10.0" top="10.0" />
                 </padding>
             </HBox>
             <HBox>
                 <children>
                     <Label text="Gain total vente">
                         <HBox.margin>
                             <Insets right="5.0" />
                         </HBox.margin>
                     </Label>
                     <Label fx:id="benefitsSell" />
                 </children>
                 <padding>
                     <Insets left="10.0" top="10.0" />
                 </padding>
             </HBox>
            <HBox>
               <children>
                  <Label text="Dividendes">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="dividends" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
          position engagé / montant engagé
      </VBox>
   </children>
</AnchorPane>
